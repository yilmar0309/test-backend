{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "lib": [ "es2016" ],
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude" : [
        "./node_modules",
        "./dist"
    ]
}